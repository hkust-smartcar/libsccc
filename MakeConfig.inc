$(info Config = 2014_CAMERA)

else ifeq ($(SCCC_CONFIG),2014_CCD)
BIN_SUFFIX:=$(BIN_SUFFIX)-2014-ccd
CPPFLAGS+=-DK60_2014_CCD=1
